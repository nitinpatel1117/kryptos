{% form_theme form 'KryptosKryptosBundle:Form:purchaseConversion.html.twig' %}

		<form id="purchaseConversion" action="{{ formAction }}" method="post" {{ form_enctype(form) }}>
	    	<div class="row">
	    	
	    		<fieldset>
					<legend>Purchase Details</legend>
			    	<div class="row amount">
			    		<div class="span6">
					    {{ form_label(form.conversions) }}
					    {{ form_widget(form.conversions) }}
					    </div>
					    <div class="span6">
					    <button id="PurchaseConversionForm_btn_cacl" type="button" class="btn btn-custom-block">
							<i class="icon-check"></i> {{ btn_calculate }}
						</button>
						</div>
					</div>
					<div class="row cost">
					    <div class="span6">
					    {{ form_label(form.cost) }}
					    {{ form_widget(form.cost) }}
					    </div>
					</div>
					<div class="row vat">
						<div class="span6">
					    {{ form_label(form.vat) }}
					    {{ form_widget(form.vat) }}
					    </div>
					</div>
					
					{{ form_rest(form) }}
					<br>
					<div class="row submit">
						<div class="span6">
						<button id="PurchaseConversionForm_btn_submit" type="submit" class="btn btn-custom-block btn-primary">
							<i class="icon-shopping-cart icon-white"></i> {{ btn_submit }}
						</button>
						</div>
					</div>
				</fieldset>
				
				<br>
				{{ form_errors(form) }}
				{{ form_errors(form.conversions) }}
				{{ form_errors(form.cost) }}
				{{ form_errors(form.vat) }}
				
	    	</div>
	    </form>
