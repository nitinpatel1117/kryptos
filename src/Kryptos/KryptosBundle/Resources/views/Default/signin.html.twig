{% extends "KryptosKryptosBundle::layout.html.twig" %}
{% form_theme form 'KryptosKryptosBundle:Form:signin.html.twig' %}

{% block content %}
	<section class="blueHeader">
		<h1>{{ location }}</h1>
		<section class="innerWrap">
			<div id="signin">
				<form action="{{ path('signin') }}" method="post" {{ form_enctype(form) }}>
		
			    	<div id="SigninForm">
			    		<div class="form_errors">
			    			{{ form_errors(form) }}
			    		</div>
				    	<div class="form_row">
						    {{ form_label(form.email) }}
						    {{ form_widget(form.email) }}
						    {{ form_errors(form.email) }}
						</div>
						<div class="form_row">
						    {{ form_label(form.password) }}
						    {{ form_widget(form.password) }}
						    {{ form_errors(form.password) }}
						</div>
						<div class="form_row staySignedIn">
						    {{ form_label(form.staySignedIn) }}
						    {{ form_widget(form.staySignedIn) }}
						    {{ form_errors(form.staySignedIn) }}
						</div>
						
						{{ form_rest(form) }}
				
				    	<input type="submit" value="Sign in" />
			    	</div>
				</form>
			</div>
		</section>
	</section>
{% endblock %}