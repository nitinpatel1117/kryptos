{% extends "KryptosKryptosBundle::layoutNotAuth.html.twig" %}
{% form_theme form 'KryptosKryptosBundle:Form:register.html.twig' %}


{% block content %}
	<form id="register" action="{{ path('register') }}" method="post" {{ form_enctype(form) }} class="form-horizontal" style="width: 500px;">
		<div class="control-group">    
			<div class="controls" > 
				<a href="/"><img src="/bundles/kryptoskryptos/images/kryptos.png" class="img-rounded" class="centering" /></a>
			</div>
		</div>
		
		{{ form_errors(form) }}
		{{ form_errors(form.title) }}
		{{ form_errors(form.firstName) }}
		{{ form_errors(form.lastName) }}
		{{ form_errors(form.jobTitle) }}
		{{ form_errors(form.company) }}
		{{ form_errors(form.location) }}
		{{ form_errors(form.email.email) }}
		{{ form_errors(form.password.password) }}
		{{ form_errors(form.captcha) }}
		
		<div class="control-group">
			{{ form_row(form.title) }}
		</div>
		
		<div class="control-group">
			{{ form_row(form.firstName) }}
			{{ form_row(form.lastName) }}
			{{ form_row(form.jobTitle) }}
			{{ form_row(form.company) }}
			{{ form_row(form.location) }}
		</div>
		
		<div class="control-group">
			{{ form_row(form.email) }}
		</div>
		
		<div class="control-group">
			{{ form_row(form.password) }}
		</div>
		
		<br>
		<div class="control-group">
			{{ form_widget(form.captcha) }}
		</div>
		<br>

		{{ form_rest(form) }}
    	
    	<div class="control-group">    
			<div class="controls">
				{% trans %}txt_terms_and_cond{% endtrans %}
			</div>  
		</div>
    	
		<div class="control-group">
			<div class="controls">
				<button type="submit" class="btn btn-custom-block btn-primary">{% trans %}btn_signup{% endtrans %}</button> 
			</div>  
		</div>
		
		<div class="control-group">    
			<div class="controls">          
				<a href="{{ path('signin') }}">{% trans %}txt_back_to_login{% endtrans %}</a>
			</div>  
		</div>
    	
	</form>

	{% include 'KryptosKryptosBundle:Default:modalTermsConditions.html.twig' %}
	{% include 'KryptosKryptosBundle:Default:modalDataUsePolicy.html.twig' %}
	{% include 'KryptosKryptosBundle:Default:modalCookieUse.html.twig' %}
	
{% endblock %}