{% block form_row %}
{% spaceless %}
	<div class="controls form_row">
	    {{ form_widget(form) }}
	</div>
	{{ form_errors(form) }}
{% endspaceless %}
{% endblock form_row %}


{% block form_errors %}
{% spaceless %}
{% if errors|length > 0 %}
	<div class="alert alert-error">
		<button class="close" data-dismiss="alert" type="button"><i class=" icon-remove"></i></button>
		{% for error in errors %}
			{{ error.messageTemplate|trans(error.messageParameters) }}<br>
		{% endfor %}
	</div>
{% endif %}
{% endspaceless %}
{% endblock form_errors %}