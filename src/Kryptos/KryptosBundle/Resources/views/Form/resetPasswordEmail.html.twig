{% block form_row %}
{% spaceless %}
    <div class="form_row">
        {{ form_label(form) }}
        {{ form_widget(form) }}
        {{ form_errors(form) }}
    </div>
{% endspaceless %}
{% endblock form_row %}


{% block field_errors %}
{% spaceless %}
{% if errors|length > 0 %}
	<ul class="errors">
		{% for error in errors %}
		<li>{{ error.messageTemplate|trans(error.messageParameters) }}</li>
		{% endfor %}
	</ul>
{% endif %}
{% endspaceless %}
{% endblock field_errors %}